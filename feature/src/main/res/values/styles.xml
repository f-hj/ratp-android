        <item name="colorPrimary">@color/ratp_acacia</item>
        <item name="colorPrimaryDark">@color/ratp_acacia</item>
    </style>

    <style name="ratp_vert" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ratp_vert</item>
        <item name="colorPrimaryDark">@color/ratp_vert</item>
